@using System.Web.Optimization;

<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <title>@(ViewBag.Title != null ? ViewBag.Title + " - " : "")Office Avenger</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    @Styles.Render("~/Content/foundation/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("head", required: false)
</head>
<body>
    <nav class="top-bar">
        <ul class="title-area">
            <li class="name">
                <h1>
                    <img src="/content/images/logo.png" /><a href="/">Office Avenger</a></h1>
            </li>
        </ul>
        <section class="top-bar-section">
            <!-- Right Nav Section -->
            <ul class="right">
                <li><a href="/razor">@ViewBag.Framework</a></li>
                <li class="divider" />
                <li class="has-dropdown">
                    <a href="/">Change Framework</a>
                    <ul class="dropdown">
                        <li><a href="/Razor">MVC (No JS)</a></li>
                        <li><a href="/Knockout">MVC + Knockout</a></li>
                        <li><a href="/Vue">Vue.js</a></li>
                    </ul>
                </li>
            </ul>
        </section>
    </nav>
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/application")
    <script>
        $(document).foundation();
    </script>
    @RenderSection("scripts", required: false)
    @StackExchange.Profiling.MiniProfiler.RenderIncludes()
</body>
</html>
